@model BudgetMetal_Admin.Models.bm_gallery

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>bm_gallery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @*<input asp-for="Description" class="form-control" />*@
                @Html.TextAreaFor(model => model.Description, 5, 10, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThumbnailImage" class="control-label"></label>
                @*<input asp-for="ThumbnailImage" class="form-control" />*@
                @Html.HiddenFor(model => model.ThumbnailImage)
                @Html.HiddenFor(model => model.DetailImage)
                @Html.HiddenFor(model => model.DownloadableImage)
                <img src="data:image/png;base64,@Model.ThumbnailImage" alt="@Model.Name" height='100px' width='125px' />
                <input type="file" name="ThumbnailImage_file" accept="image/*">
                <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailImage" class="control-label"></label>
                @*<input asp-for="DetailImage" class="form-control" />*@
                <img src="data:image/png;base64,@Model.DetailImage" alt="@Model.Name" height='100px' width='125px' />
                <input type="file" name="DetailImage_file" accept="image/*">
                <span asp-validation-for="DetailImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DownloadableImage" class="control-label"></label>
                @*<input asp-for="DownloadableImage" class="form-control" />*@
                @*<img src="data:image/png;base64,@Model.DownloadableImage" alt="@Model.Name" height='100px' width='125px' />*@
                <input type="file" name="DownloadableImage_file" >
                <span asp-validation-for="DownloadableImage" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                    @Html.HiddenFor(model => model.CreatedDate)
                    @Html.HiddenFor(model => model.CreatedBy)
                    @Html.HiddenFor(model => model.Version)
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
