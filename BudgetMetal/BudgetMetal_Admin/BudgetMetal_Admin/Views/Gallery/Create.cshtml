@model BudgetMetal_Admin.Models.bm_gallery

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>bm_gallery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextAreaFor(model => model.Description,5,10, htmlAttributes: new { @class="form-control"})
                @*<input asp-for="Description" class="form-control" />*@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThumbnailImage" class="control-label"></label>
                @*<input asp-for="ThumbnailImage" class="form-control" />*@
                <input type="file" name="ThumbnailImage" accept="image/*">
                <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailImage" class="control-label"></label>
                @*<input asp-for="DetailImage" class="form-control" />*@
                <input type="file" name="DetailImage" accept="image/*">
                <span asp-validation-for="DetailImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DownloadableImage" class="control-label"></label>
                @*<input asp-for="DownloadableImage" class="form-control" />*@
                <input type="file" name="DownloadableImage" >
                <span asp-validation-for="DownloadableImage" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" /><br /> <span class="text-danger">If images are empty, this record will not be saved.</span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
